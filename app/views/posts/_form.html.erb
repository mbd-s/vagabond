<!-- same as saying push @post to @user.posts array -->
<%= form_for [@user, @city, @post] do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", placeholder: "Description" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Post", class: "btn btn-block btn-success" %>
  </div>
<% end %>
